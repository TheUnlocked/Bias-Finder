{
  "manifest_version": 2,

  "name": "Bias Finder",
  "description": "Find the bias of any news site you go to with this simple extension!",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "<all_urls>"
  ],
  "background": {
      "scripts": ["jquery-3.1.1.min.js", "background.js"]
  },
  "content_scripts": [
    {
      "matches":["<all_urls>"],
      "js": ["jquery-3.1.1.min.js"]
    }
  ]
}
