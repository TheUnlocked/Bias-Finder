{
  "manifest_version": 2,

  "name": "Bias Finder",
  "version": "2.0.0.0",

  "icons": {"128": "Icons/icon_about.png"},

  "short_name": "Bias Finder",
  "description": "Find the bias of any news site you go to!",

  "author": "Unlocked",
  "homepage_url": "https://github.com/TheUnlocked/Bias-Finder",

  "options_ui": {
    "page": "Options/options.html",
    "open_in_tab": false
  },

  "browser_action": {
    "default_icon": "Icons/icon.png",
    "default_popup": "Popup/popup.html"
  },
  "permissions": [
    "tabs",
    "storage",
    "<all_urls>"
  ],
  "background": {
      "scripts": ["libs/jquery-3.1.1.min.js", "telemetry.js", "background.js"]
  },
  "content_security_policy": "script-src 'self' https://www.google-analytics.com/; object-src 'self';"
}
